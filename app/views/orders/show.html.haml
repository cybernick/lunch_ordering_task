%div.container
  -@orders.each do |order|
    %h3
      %p
      username:
      =order.user.name
      %p
      email:
      =order.user.email
    %ul
      %li
        First course:
        =order.first_course.name
        price:
        =order.first_course.price
      %li
        Second course:
        =order.second_course.name
        price:
        =order.second_course.price
      %li
        Drink:
        =order.drink.name
        price:
        =order.drink.price