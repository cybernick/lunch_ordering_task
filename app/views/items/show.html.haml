%div.container
  %h1 Admin, make your own menu!
  -if @first_courses.count != 0
    %h2 First course
  -@first_courses.each  do |course|
    %p
      =course.name
      =course.price
  -if @second_courses.count != 0
    %h2 Second course
  -@second_courses.each  do |course|
    %p
      =course.name
      =course.price
  -if @drink_courses.count != 0
    %h2 Drinks
  -@drink_courses.each  do |course|
    %p
      =course.name
      =course.price
  %h2 Plese submit new first course meal
  = form_for @first_course, url: first_courses_path do |f|
    = f.label :name
    = f.text_field :name, autofocus: true

    = f.label :price
    = f.text_field :price, autofocus: true

    = f.submit "Submit" ,name: 'sub'
  %h2 Plese submit new second course meal
  = form_for @second_course, url: second_courses_path do |f|
    = f.label :name
    = f.text_field :name, autofocus: true

    = f.label :price
    = f.text_field :price, autofocus: true

    = f.submit "Submit"
  %h2 Plese submit drink
  = form_for @drink_course, url: drinks_path do |f|
    = f.label :name
    = f.text_field :name, autofocus: true

    = f.label :price
    = f.text_field :price, autofocus: true

    = f.submit "Submit"









